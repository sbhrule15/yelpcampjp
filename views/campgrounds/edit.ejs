<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center; margin: 25px auto;">
		Edit <%=campground.name %>
	</h1>

	<div class="mx-auto" style="width: 500px; margin: 25px auto;">
		<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">

				<div class="form-group">
					<label for="campgroundName">Campground Name</label>
					<input type="text" class="form-control" name="campground[name]" placeholder="Campground Name" aria-describedby="nameHelp" value="<%=campground.name%>">
				</div>
				<div class="form-group">
					<label for="imageURL">Image URL</label>
					<input type="text" class="form-control" name="campground[image]" placeholder="Image Url" value="<%=campground.image%>">
				</div>
				<div class="form-group">
					<label for="campgroundDescription">Description</label>
					<input type="text" class="form-control" name="campground[description]" placeholder="Description" aria-describedby="descriptionHelp" value="<%=campground.description%>">
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
				<a class="btn btn-primary" href="/campgrounds">Back</a>
		</form>
	</div>
</div>



<%- include("../partials/footer") %>