<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center; margin: 25px auto;">
		Create a New Campground
	</h1>

	<div class="mx-auto" style="width: 500px; margin: 25px auto;">
		<form action="/campgrounds" method="POST">

				<div class="form-group">
					<label for="campgroundName">Campground Name</label>
					<input type="text" class="form-control" name="name" placeholder="Campground Name" aria-describedby="nameHelp">
				</div>
				<div class="form-group">
					<label for="imageURL">Image URL</label>
					<input type="text" class="form-control" name="image" placeholder="Image Url">
				</div>
				<div class="form-group">
					<label for="campgroundDescription">Description</label>
					<input type="text" class="form-control" name="description" placeholder="Description" aria-describedby="descriptionHelp">
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
				<a class="btn btn-primary" href="/campgrounds">Back</a>
		</form>
	</div>
</div>



<%- include("../partials/footer") %>