<%- include("partials/header") %>

<div class="container">
	<div class="jumbotron jumbotron-fluid">
	  <div class="container">
		<h1 class="display-4 campground-header" >Welcome to YelpCamp</h1>
		  <p class="campground-header">
			  View our handpicked campgrounds from all over the world
		  </p>
		  <p class="campground-header">
			<a class= "btn btn-primary btn-large campground-header" href="/campgrounds/new" role="button">Add a New Campground</a>
		  </p>
	  </div>
	</div>
	
	<div class="row d-flex flex-wrap">
		<% for(var i=0; i < campgrounds.length; i++){ %>
			<div class="col-med-3 col-sm-4 px-md-3">
				<div class="card">
					<img src="<%= campgrounds[i].image %>" class="card-img-top">
					<div class="card-body text-center">
						<h4 class="card-title">
							<%= campgrounds[i].name; %>
						</h4>
						<a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
					</div>
				</div>
			</div>
		<% } %>
	</div>


	
</div>

<%- include("partials/footer") %>
